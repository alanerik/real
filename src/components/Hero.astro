---
import BuscarButton from '@/components/BuscarButton.jsx';
import Buscador from '@/components/Buscador.jsx';
import { Image } from 'astro:assets'; // Import Image component
import sliderImage from '/public/slider-1.webp'; // Import the image directly

---

<section class="relative h-[620px] bg-cover bg-center">
    <Image src={sliderImage} loading={"eager"} fetchpriority={"high"} alt="Hero Background" class="absolute inset-0 w-full h-full object-cover -z-10" />
    <div class="absolute inset-0 bg-gradient-to-b from-[var(--gradient-color)] from-10% to-transparent 110%"></div>
    <div class="relative z-10 flex flex-col items-center justify-center h-full">
        

        <div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col items-center justify-center gap-4">
                <div class="w-full">
                    <Buscador client:load />
                </div>
                <div class="w-full">
                    <BuscarButton variant="hero" client:load />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
section {
    --gradient-color:#0D4715 ;
    /* --url-img: url(/slider-1.webp); Removed */
}
</style>