---
// Footer.astro
import NoticiasInput from './FormularioFooter.jsx';
import LinkComponent from '@/components/Link.jsx';
import { Divider } from '@heroui/react';

// 游늵 CONFIGURACI칍N DEL FOOTER - Toda la info centralizada
const FOOTER_CONFIG = {
  // Informaci칩n de la empresa
  brand: {
    name: "RealEstate",
    tagline: "Tu partner inmobiliario de confianza en la Costa Atl치ntica Argentina. Encontr치 la propiedad de tus sue침os.",
    location: "Pinamar, Buenos Aires",
    email: "info@realestate.com",
    newsletterText: "Recib칤 las mejores ofertas y novedades inmobiliarias"
  },

  // Redes sociales
  socialMedia: [
    {
      name: "Instagram",
      url: "/",
    },
    {
      name: "YouTube",
      url: "/",
    },
    {
      name: "LinkedIn",
      url: "/",
    }
  ],

  // Servicios
  servicios: [
    { name: "Venta de Propiedades", url: "/venta" },
    { name: "Compra", url: "/compra" },
    { name: "Alquiler Temporario", url: "/alquiler" },
    { name: "Tasaciones", url: "/tasaciones" },
    { name: "Inversiones", url: "/inversiones" }
  ],

  // Ciudades
  ciudades: [
    { name: "Pinamar", url: "/pinamar" },
    { name: "Caril칩", url: "/carilo"},
    { name: "Valeria del Mar", url: "/valeria-del-mar" },
    { name: "Juan Madariaga", url: "/juan-madariaga" },
    { name: "Costa Esmeralda", url: "/costa-esmeralda" }
  ],

  // Copyright
  copyright: `춸 ${new Date().getFullYear()} RealEstate. Todos los derechos reservados.`
};

// 游꿛 ESTILOS - Clases CSS centralizadas
const STYLES = {
  container: "relative z-10 max-w-7xl mx-auto px-4 py-12 lg:py-16 lg:px-8",
  grid: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12",
  section: "space-y-6",
  sectionTitle: "text-lg font-semibold text-black flex items-center space-x-2",
  brandTitle: "text-2xl font-bold text-black",
  tagline: "text-gray-600 text-sm leading-relaxed",
  contactInfo: "flex items-center space-x-3 text-sm text-gray-600",
  contactIcon: "w-4 h-4",
  copyright: "text-sm text-black",
  newsletterSection: "space-y-4 p-4 bg-gray-50 rounded-lg border",
};
---

<footer class="text-black relative overflow-hidden bg-white">
  <div class={STYLES.container}>
    <!-- Main Footer Content -->
    <div class={STYLES.grid}>
      
      <!-- Brand Section -->
      <div class={STYLES.section}>
        <div class="flex items-center space-x-3">
          <h3 class={STYLES.brandTitle}>
            {FOOTER_CONFIG.brand.name}
          </h3>
        </div>
        <p class={STYLES.tagline}>
          {FOOTER_CONFIG.brand.tagline}
        </p>
      </div>

      <!-- Servicios -->
      <div class={STYLES.section}>
        <h4 class={STYLES.sectionTitle}>
          <span>Servicios</span>
        </h4>
        <nav class="space-y-3">
          {FOOTER_CONFIG.servicios.map(servicio => (
            <LinkComponent href={servicio.url} color="success" client:idle>
              {servicio.name}
            </LinkComponent>
          ))}
        </nav>
      </div>

      <!-- Ciudades -->
      <div class={STYLES.section}>
        <h4 class={STYLES.sectionTitle}>
          <span>Ciudades</span>
        </h4>
        <nav class="space-y-3">
          {FOOTER_CONFIG.ciudades.map(ciudad => (
            <LinkComponent href={ciudad.url} color="success" client:idle>
              {ciudad.name}
            </LinkComponent>
          ))}
        </nav>
      </div>

      <!-- Contacto & Newsletter -->
      <div class={STYLES.section}>
        <h4 class={STYLES.sectionTitle}>
          <span>Contacto</span>
        </h4>
        
        <div class="space-y-4">
          <div class={STYLES.contactInfo}>
            <svg class={`${STYLES.contactIcon} text-blue-500`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>{FOOTER_CONFIG.brand.location}</span>
          </div>
          
          <div class={STYLES.contactInfo}>
            <svg class={`${STYLES.contactIcon} text-green-500`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href={`mailto:${FOOTER_CONFIG.brand.email}`} class="hover:text-black transition-colors">
              {FOOTER_CONFIG.brand.email}
            </a>
          </div>
        </div>

        <!-- Newsletter Section -->
        <div class={STYLES.newsletterSection}>
          <h5 class="text-sm font-semibold text-black mb-2">Newsletter</h5>
          <p class="text-xs text-gray-600 mb-3">
            {FOOTER_CONFIG.brand.newsletterText}
          </p>
          <NoticiasInput client:idle />
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div>
      <Divider className="my-12 " />
      <div class="flex flex-col-reverse md:flex-row justify-between items-center gap-4 md:space-y-0">
        <p class={STYLES.copyright} >
          {FOOTER_CONFIG.copyright}
        </p>
      
       <!-- Social Media -->
        <div class="flex space-x-4 ">
          {FOOTER_CONFIG.socialMedia.map(social => (
            <LinkComponent isExternal href={social.url} color="primary" client:idle>
              {social.name}
            </LinkComponent>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>