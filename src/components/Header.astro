---
import BuscarButton from "@/components/BuscarButton.jsx";
---

<header class="h-[120px] w-full flex items-center bg-[#0D4715]">
    <div
        class="h-[120px] max-w-7xl mx-auto flex items-center justify-between px-4 sm:px-6 lg:px-8 w-full"
    >
        <div class="flex justify-between w-full items-center">
            <a href="/" class="text-2xl font-bold text-amber-50">
                REAL STATE
            </a>
            <div class="flex gap-6 items-center">
                <a
                    href="/favoritos"
                    class="hidden md:flex text-amber-50 hover:text-white transition-colors font-medium items-center gap-2"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-5 h-5"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z"
                        ></path>
                    </svg>
                    Favoritos
                </a>
                <BuscarButton variant="header" client:load />
            </div>
        </div>
    </div>
</header>
