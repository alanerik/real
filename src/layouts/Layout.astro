---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import ToastManager from "@/components/ToastManager.jsx";
import BottomNavigation from "@/components/BottomNavigation.astro";
import { HeroUIProvider } from "@heroui/react";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Inmobiliaria en Pinamar, tecnología real estate. Encuentra tu propiedad ideal en la costa argentina."
		/>
		<title>
			RealState Inmobiliaria | Pinamar-costa esmeralda Madariaga
		</title>

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content="RealState Inmobiliaria | Pinamar" />
		<meta
			property="og:description"
			content="Inmobiliaria en Pinamar, tecnología real estate. Encuentra tu propiedad ideal en la costa argentina."
		/>
		<meta property="og:image" content="/slider-1.webp" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta
			property="twitter:title"
			content="RealState Inmobiliaria | Pinamar"
		/>
		<meta
			property="twitter:description"
			content="Inmobiliaria en Pinamar, tecnología real estate. Encuentra tu propiedad ideal en la costa argentina."
		/>
		<meta property="twitter:image" content="/slider-1.webp" />

		<!-- Resource Hints for Performance -->
		<link
			rel="preconnect"
			href="https://fonts.googleapis.com"
			crossorigin
		/>
		<link rel="dns-prefetch" href="https://fonts.googleapis.com" />

		<!-- Preload Critical Resources -->
		<link
			rel="preload"
			as="image"
			href="/slider-1.webp"
			fetchpriority="high"
		/>

		<ClientRouter />
	</head>
	<body>
		<HeroUIProvider client:load>
			<Header />

			<slot name="hero" />
			<main class="max-w-5xl mx-auto px-4 lg:px-0 py-36 md:px-6">
				<slot name="breadcrumb" />
				<div class="flex flex-col gap-36">
					<slot />
				</div>
			</main>
			<Footer />
			<BottomNavigation />
			<ToastManager client:load />
		</HeroUIProvider>
	</body>
</html>
