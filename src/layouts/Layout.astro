---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import ToastManager from "@/components/ToastManager.jsx";
import BottomNavigation from "@/components/BottomNavigation.astro";
import { HeroUIProvider } from "@heroui/react";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="Inmobiliaria en pinamar, tecnologia realstate"
		/>
		<title>RealState inmobiliaria</title>
		<ClientRouter />
	</head>
	<body>
		<HeroUIProvider client:load>
			<Header />

			<slot name="hero" />
			<main class="max-w-5xl mx-auto px-4 lg:px-0 py-36 md:px-6">
				<slot name="breadcrumb" />
				<div class="flex flex-col gap-36">
					<slot />
				</div>
			</main>
			<Footer />
			<BottomNavigation />
			<ToastManager client:load />
		</HeroUIProvider>
	</body>
</html>
