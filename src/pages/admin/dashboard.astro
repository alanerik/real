<script>
    import { supabase } from "../../lib/supabase";

    // Check Auth
    const checkUser = async () => {
        const {
            data: { session },
        } = await supabase.auth.getSession();
        if (!session) {
            window.location.href = "/admin/login";
        }
    };

    checkUser();
</script>
